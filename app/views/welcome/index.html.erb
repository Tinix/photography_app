
<% if current_user %>
  <h3>Welcome: <%= current_user.email %></h3>
<% else %>
  <div class="jumbotron">
    <h2 class="display-4">Welcome to the Photo Management App!</h2>
    <p class="lead">
      You'll love managing your Photos with our application. Sign up!
    </p>
  </div>



<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Plan Premium</h5>
        <p class="card-text pull-right">Price: $10</p>
        <ul>
            <li>Unlimit images Upload</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
        </ul>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Plan Gold</h5>
        <p class="card-text pull-right">Price: $20</p>
         <ul>
            <li>Unlimit images Upload</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
            <li class="extra">Unlimited projects</li>
        </ul>
       <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
      </div>
    </div>
  </div>
</div>

<% end %>
